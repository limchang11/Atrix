<div class="container">
    <br/>
    <h2>View products (Admin)</h2>
    <br/><br/>
    <a href="/productsA/addProduct" class="btn btn-success">Add Product</a>
    <br /><br />

    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Description</th>
                <th>Price</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.price}}</td>

                    <td><a href="/productsA/editProduct/{{this.name}}" class="btn btn-warning btn-sm">Edit</a></td>
                    <td><a href="/productsA/deleteProduct/{{this.name}}" class="btn btn-danger btn-sm">Delete</a></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
    <br/>
	<br/>
	<br/>
</div>