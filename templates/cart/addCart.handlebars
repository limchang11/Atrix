<div class="row">
	<div class="col-md-6 mx-auto">
		<div class="card card-body">
			{{#if user}}
				<h3 class="text-center">Add to cart</h3>

				<p>Do you want to add "{{product_name}}" to cart?</p>

				<form action="" method="POST">
					<input type="hidden" id="user_id" name="user_id" value="{{user_id}}">
					<input type="hidden" id="product_id" name="product_id" value="{{product_id}}">
					<input type="hidden" id="product_name" name="product_name" value="{{product_name}}">
					<input type="hidden" id="product_price" name="product_price" value="{{product_price}}">
					<input type="hidden" id="product_qty" name="product_qty" value="{{product_qty}}">
					
					<a href="/productsPublic" class="btn btn-danger">Back</a>
					<input type="submit" value="Yes" class="btn btn-primary"/>
				</form>
			{{else}}
				<h3>You need to be logged in as user to add to cart</h3>
				<p>Please log in or register.</p>
				<p class="lead">
					<a class="btn btn-secondary btn-sm" href="/productsPublic" role="button">Back</a>
				</p>
			{{/if}}
		</div>
	</div>
</div>